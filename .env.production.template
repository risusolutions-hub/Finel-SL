# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this file to .env and update all values
# ============================================

# Node Environment
NODE_ENV=production

# Server Port
PORT=4000

# Database Configuration
# Use MongoDB for production (recommended)
MONGO_URI=mongodb://mongo-host:27017/sparkel
# Or use MySQL if required
DB_HOST=localhost
DB_PORT=3306
DB_NAME=sparkel
DB_USER=sparkel_user
DB_PASS=strong_password_here
DB_DIALECT=mysql

# Session Configuration
SESSION_SECRET=generate_strong_random_value_here_min_32_chars

# JWT Configuration
JWT_SECRET=generate_strong_random_value_here_min_32_chars
JWT_EXPIRES_IN=7d

# CORS Configuration - Update to your production domain
CORS_ORIGIN=https://sparkel.yourdomain.com,https://app.yourdomain.com

# Upload Settings
MAX_FILE_SIZE=104857600
UPLOAD_PATH=./backend/uploads

# Email/SMTP Settings
SMTP_HOST=smtp.yourmailserver.com
SMTP_PORT=587
SMTP_USER=your_email@yourdomain.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@yourdomain.com

# Company Info
COMPANY_NAME=Sparkel Services
COMPANY_EMAIL=support@yourdomain.com
COMPANY_PHONE=+1-234-567-8900

# Feature Flags
ALLOW_PUBLIC_COMPLAINTS=true
ENABLE_REQUEST_LOGS=false

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# Maintenance Mode
MAINTENANCE_MODE=false

# ============================================
# IMPORTANT FOR PRODUCTION
# ============================================
# 1. Never commit this file to git
# 2. Use strong random values for all secrets
# 3. Rotate secrets regularly
# 4. Use environment variable manager in CI/CD
# 5. Store in secure vault (AWS Secrets Manager, etc.)
# 6. Monitor access logs
# 7. Enable HTTPS/SSL
# 8. Set up monitoring and alerting
